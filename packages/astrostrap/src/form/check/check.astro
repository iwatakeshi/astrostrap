---
import Box from "../../box";
import type { ComponentProps } from "astro/types";
interface Props extends ComponentProps<typeof Box> {
    switch?: boolean;
    inline?: boolean;
    reverse?: boolean;
}
const {
    switch: isSwitch,
    inline: isInline,
    reverse: isReverse,
    class: klass,
    "class:list": klassList,
    ...props
} = Astro.props as Props;
---

<Box
    class:list={[
        "form-check",
        { 
            "form-switch": isSwitch, 
            "form-check-inline": isInline,
            "form-check-reverse": isReverse,
        },
        klass,
        klassList,
    ]}
    {...props}
>
    <slot />
</Box>
