---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<'input'> {
    type?: 'checkbox' | 'radio'
}

const {
    class: klass,
    "class:list": klassList,
    ...props
} = Astro.props as Props;
---

<input class:list={["form-check-input", klass, klassList]} {...props} />
