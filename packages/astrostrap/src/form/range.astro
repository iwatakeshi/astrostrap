---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<'input'> {
    type?: 'range';
    min?: number;
    max?: number;
    step?: number;
}

const {
    class: klass,
    "class:list": klassList,
    ...props
} = Astro.props as Props;

---

<input class:list={["form-range", klass, klassList]} {...props} />