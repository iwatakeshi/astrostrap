---
import Box from "../box";
import type { ComponentProps } from "astro/types";
interface Props extends ComponentProps<typeof Box> {}
  const {
  as: As = "p",
  class: klass,
  "class:list": klassList,
  ...props
} = Astro.props as Props;
const properties = { as: As, ...props };
---

<Box class:list={["card-text", klass, klassList]} {...properties}>
  <slot />
</Box>
