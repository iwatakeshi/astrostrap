---
import '../styles/bootstrap.scss';
import { Container, Card, Form } from 'astrostrap';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
	</head>
	<body>
    <h1>Astro</h1>
    <Container class:list="mx-auto" breakpoint="sm">
      <Card>
		<Card.Header>
		  <Card.Title>Card Title</Card.Title>
		</Card.Header>
		<Card.Body>
		  <Card.Text>
			Some quick example text to build on the card title and make up the bulk of the card's content.
		  </Card.Text>
		</Card.Body>
		<Card.Footer>
		  <a href="#">Card Link</a>
		  <a href="#">Another Link</a>
		</Card.Footer>
	  </Card>

	  <Form class="mt-3">
		<div class="mb-3">
		  <Form.Label for="exampleInputEmail1" >Email address</Form.Label>
		  <Form.Control type="email" id="exampleInputEmail1" aria-describedby="emailHelp" />
		  <Form.Text id="emailHelp">We'll never share your email with anyone else.</Form.Text>
		</div>
		<div class="mb-3">
		  <Form.Label for="exampleInputPassword1">Password</Form.Label>
		  <Form.Control type="password" id="exampleInputPassword1" />
		</div>
		<Form.Check class="mb-3">
		  <Form.Check.Input type="checkbox"  id="exampleCheck1" />
		  <Form.Check.Label for="exampleCheck1">Check me out</Form.Check.Label>
		</Form.Check>
		<button type="submit" class="btn btn-primary">Submit</button>
	  </form>

	  <form class="mt-5">
		<div class="mb-3">
		  <label for="exampleInputEmail1" class="form-label">Email address</label>
		  <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
		  <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
		</div>
		<div class="mb-3">
		  <label for="exampleInputPassword1" class="form-label">Password</label>
		  <input type="password" class="form-control" id="exampleInputPassword1">
		</div>
		<div class="mb-3 form-check">
		  <input type="checkbox" class="form-check-input" id="exampleCheck1">
		  <label class="form-check-label" for="exampleCheck1">Check me out</label>
		</div>
		<button type="submit" class="btn btn-primary">Submit</button>
	  </form>
    </Container>
	</body>
</html>

